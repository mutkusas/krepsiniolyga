                @Html.EditorFor(model => model.Žiūrovai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Žiūrovai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pajamos, htmlAttributes: new { @class = "control-label col-md-2" })
