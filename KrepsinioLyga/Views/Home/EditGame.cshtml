                @Html.DropDownListFor(model => model.Arena, (List<SelectListItem>)ViewBag.Arenas, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Arena, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Žiūrovai, htmlAttributes: new { @class = "control-label col-md-2" })
