        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Namai, "Namai", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Namai, (List<SelectListItem>)ViewBag.Teams, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Namai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Svečiai, "Svečiai", htmlAttributes: new { @class = "control-label col-md-2" })
