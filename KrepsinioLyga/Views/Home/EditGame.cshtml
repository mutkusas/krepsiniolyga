            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.STaškai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.STaškai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.STaškai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Išsaugoti" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Grįžti į sąrašą", "Rungtynes")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
